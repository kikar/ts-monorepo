{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "apps/**/*",
    "libs/**/*"
  ],
  "references": [
    {
      "path": "./apps/api/tsconfig.app.json"
    },
    {
      "path": "./apps/yum-test/tsconfig.app.json"
    },
  ],
}
