{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/jwt": [
        "libs/jwt/src"
      ],
      "@app/jwt/*": [
        "libs/jwt/src/*"
      ],
      "@app/aws": [
        "libs/aws/src"
      ],
      "@app/aws/*": [
        "libs/aws/src/*"
      ]
    }
  }
}
